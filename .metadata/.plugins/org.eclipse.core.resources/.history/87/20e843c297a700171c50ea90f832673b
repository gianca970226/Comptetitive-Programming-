class dato():
    def __init__(self,table,res):
        self.table=table
        self.res=res
    
def recursivo(grups,d,m,cont):
    for i in range(0,m):
        if d.table[i]!=-1:
            for j in d.res:
                if j in grups[i]:
                    d.res=d.res|grups[i]
                    d.table[i]=-1
                    d=d.res|recursivo(grups, d, m,cont)
    return res
    
def main():
    while True:
        n,m=map(int,input().split())
        if m ==0 and n==0:
            break
        grups={}
        if m ==0:
            print("1")
        else:
            table=[]
            for i in range(0,m):
                date=list(map(int,input().split()))
                k=int(date[0])
                table.append(1)
                lista=set()
                for j in range(1,k+1):
                    lista.add(date[j])
                grups[i]=lista
            res=set()
            res.add(0)
            cont=0
            d=dato(res,table)
            d=recursivo(grups, d,m,cont)
            print(len(res))
           
            
if __name__=="__main__":
    main()