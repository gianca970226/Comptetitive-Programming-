def main():
    while(True):
        n=int(input())
        if n==0:
            break;
        else:
            grid =[[0]*(n)]*3
            for j in range(0,n):
                print(j)
                x,y=input().split()
                numCar=int(x)
                gan=int(y)
                grid[0][j]=numCar
                grid[1][j]=gan
                
                print(grid)
    

if __name__ == '__main__':
    main()