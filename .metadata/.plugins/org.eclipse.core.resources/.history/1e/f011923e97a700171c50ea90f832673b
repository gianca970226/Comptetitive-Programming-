
def recursivo(grups,table,m,res,cont):
    cont=cont+1
    for i in range(0,m):
        if table[i]!=-1:
            for j in res:
                if j in grups[i]:
                    res=res|grups[i]
                    table[i]=-1
                    
                    res=res|recursivo(grups, table, m, res,cont)
    return res
    
def main():
    while True:
        n,m=map(int,input().split())
        if m ==0 and n==0:
            break
        grups={}
        if m ==0:
            print("1")
        else:
            table=[]
            for i in range(0,m):
                date=list(map(int,input().split()))
                k=int(date[0])
                table.append(1)
                lista=set()
                for j in range(1,k+1):
                    lista.add(date[j])
                grups[i]=lista
            res=set()
            res.add(0)
            cont=0
            res=res|recursivo(grups, table,m,res,cont)
            print(len(res))
            print(cont)
            cont=0
            
if __name__=="__main__":
    main()