def main():
    while(True):
        n=int(input())
        if n==0:
            break;
        else:
            grid = [[0 for x in range(n)] for y in range(3)]
            ban=False
            for j in range(0,n):
                x,y=input().split()
                numCar=int(x)
                gan=int(y)
                grid[0][j]=numCar
                grid[1][j]=gan
                print(grid)
            for j in range(0,n):
                value=j+grid[1][j]
                if grid[2][value]!=0:
                    ban=True
                    break
                else:
                    grid[2][value]=grid[0][j]
            
            if ban==True:
                print("-1")   
            else:
                for j in range(0,n):
                    print(grid[2][j])   
                    
if __name__ == '__main__':
    main()